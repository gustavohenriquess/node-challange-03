generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum Sex {
  MALE
  FEMALE
}

enum Type {
  DOG
  CAT
  BIRD
  FISH
  REPTILE
  RODENT
  OTHER
}

enum Energy {
  ONE
  TWO
  THREE
  FOUR
  FIVE
}

model Pet {
  id           String   @id @default(uuid())
  name         String
  about        String
  age          Int
  city         String
  energy       Energy
  size         Size
  independence Size
  sex          Sex
  type         Type
  environment  Size
  created_at   DateTime @default(now())

  PetComplement PetComplement[]
  Org           Org             @relation(fields: [org_id], references: [id])
  org_id        String

  @@map("pets")
}

model PetComplement {
  id          String   @id @default(uuid())
  photo_url   String?
  requirement String?
  created_at  DateTime @default(now())

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("pets_complements")
}

model Org {
  id                 String   @id @default(uuid())
  name               String
  email              String
  person_responsible String?
  postal_code        String
  cell_phone         String
  password_hash      String
  state              String
  city               String
  latitude           Decimal?
  longitude          Decimal?
  created_at         DateTime @default(now())

  Pet Pet[]

  @@map("orgs")
}
